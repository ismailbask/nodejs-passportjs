<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <% if (locals.validation_error!=undefined||locals.success_message!=undefined
                                    ||locals.login_error!=endefined) { %>
                                    <%- include('./partials/_message') %>
                                        <% } %>
                                            <h1 class="h4 text-gray-900 mb-2">Yeni şifre</h1>
                                            <p class="mb-4">Şifrenizi sıfırlayabilirsiniz.</p>
                            </div>
                            <form class="user" action="/reset-password" method="post">
                            <!--şifre sıfırlamak için kullanılan token ve idleri kaybetmemek için burada sakladık çünkü şifre güncellerken hata ile karşılaşılınca linki kaybetmek istemeyiz.-->
                                <input type="hidden" name="id"value="<%=typeof id!='undefined'?id: '' %>" >
                                <input type="hidden" name="token"value="<%=typeof token!='undefined'?token: '' %>" >
                                <div class="form-group">
                                    <input type="password" value="<%=typeof password!='undefined'?password: '' %>"
                                        name="password" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Şifrenizi giriniz giriniz...">
                                </div>
                                <div class="form-group">
                                    <input type="password" value="<%=typeof repassword!='undefined'?repassword: '' %>"
                                        name="repassword" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Şifre (tekrar)">
                                </div>
                                <button class="btn btn-primary btn-user btn-block">
                                    Şifreyi güncelle
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/register">Bir hesabın yok mu? Kullanıcı oluştur!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/login">Bir hesabın var mı? Giriş yap!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>